{
  "store.product": {
    "children": [
      "breadcrumb",
      "flex-layout.row#main"
    ]
  },

  "flex-layout.row#main": {
    "props": {
      "marginTop": "6"
    },
    "children": [
      "flex-layout.col#left",
      "flex-layout.col#right"
    ]
  },

  "flex-layout.col#left": {
    "children": [
      "product-images"
    ]
  },
  "flex-layout.col#right": {
    "props": {
      "preventVerticalStretch": true,
      "verticalAlign": "middle"
    },
    "children": [
      "product-name", "product-identifier.product", "flex-layout.row", "product-price", "buy-button", "shipping-simulator"
    ]
  },

  "flex-layout.row": {
    "children": [
      "flex-layout.col#left-col",
      "flex-layout.col#right-col"
    ]
  },

  "flex-layout.col#left-col": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "sku-selector"
    ]
  },

  "flex-layout.col#right-col": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "product-quantity"
    ]
  },

  "product-price#product-details": {
    "props": {
      "showSavings": true,
      "showListPrice": true
    }
  }

}